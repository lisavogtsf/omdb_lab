<!doctype html>
<html>
  <head>
    <title>Movie Search Results</title>
  </head>
  <body>
    <h1>Movie Search Results</h1>
    <h2>Click to select a film and see more details</h2>
    <ul>
      <!-- passed {movieList: body} -->
      <% movieList.forEach(function(film){ %>
      <li><a href="movie/<%= film.imdbID %>"> <%= film.Title %> </a></li>
      <%  }) %>
    </ul>
  </body>
</html>

